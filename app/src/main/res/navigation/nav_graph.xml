<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/permissionFragment">

    <fragment
        android:id="@+id/permissionFragment"
        android:name="fr.nourry.mynewkomik.permission.PermissionFragment"
        android:label="PermissionFragment">
        <action
            android:id="@+id/action_permissionFragment_to_browserFragment"
            app:destination="@id/browserFragment" />
    </fragment>
    <fragment
        android:id="@+id/browserFragment"
        android:name="fr.nourry.mynewkomik.browser.BrowserFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_browser">
        <action
            android:id="@+id/action_browserFragment_to_pictureSliderFragment"
            app:destination="@id/pictureSliderFragment" />
    </fragment>
    <fragment
        android:id="@+id/pictureSliderFragment"
        android:name="fr.nourry.mynewkomik.pictureslider.PictureSliderFragment"
        android:label="Slider"
        tools:layout="@layout/fragment_picture_slider">
        <argument
            android:name="comic"
            app:argType="fr.nourry.mynewkomik.database.ComicEntry" />
        <argument
            android:name="currentPage"
            app:argType="integer" />
    </fragment>
</navigation>